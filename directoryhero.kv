<GameView>:
	orientation: 'vertical'
	ScrollView:
		size_hint_y: 0.87
		do_scroll_x:False
		TreeView:
			id: tree
			size_hint_y: None

	GridLayout:
		size_hint_y: 0.13
		cols: 3
		rows: 1
		padding:[20,20,20,20]
		spacing: [5, 0]
		Label:
			size_hint_x: 0.2
			font_size:20
			text:"Answer:"
		TextInput:
			id:input
			size_hint_x: 0.6
			font_size: 20
			text:''
			multiline:False
			on_text_validate: root.check()
		Button:
			id: submit
			size_hint_x: 0.2
			font_size: 20
			text: "Submit"
			on_release: root.check()

<Hidden>:
	cols:3
	rows:1
	Label:
		text:"Password:"
		size_hint_x:0.3
	TextInput:
		id:password
		size_hint_x:0.5
		multiline:False
		font_size: 20
		on_text_validate: root.check()
	Button:
		size_hint_x: 0.2
		text: "Unlock"
		on_release: root.check()