<GameView>:
	orientation:'horizontal'
	ScrollView:
		do_scroll_x:False
		TreeView:
			id: tree
	GridLayout:
		cols: 1
		rows: 3
		padding:[20,20,20,20]
		Label:
			size_hint_y: None
			height: 25
			font_size:20
			text:"Answer:"
		TextInput:
			id:input
			size_hint_y: None
			height: 40
			font_size: 20
			text:''
			multiline:False
			on_text_validate: root.check()

<Hidden>:
	cols:2
	rows:1
	Label:
		text:"Enter password:"
		size_hint_x:0.3
	TextInput:
		id:password
		size_hint_x:0.7
		multiline:False
		font_size: 20
		on_text_validate: root.check()